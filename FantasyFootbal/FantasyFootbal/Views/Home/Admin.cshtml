@model FantasyFootbal.Models.Tournoment.TournamentContext

<div class="container">
    <div class="admin">
        <div class="admin-login main-center">
            <div class="input_box">
                <h5>Admin Panel</h5>
            </div>
            <form method="post" action="post" id="form">
                <div class="row">
                    <div class="col-md-4 admin-group">
                        <input type="text" required class="form-control" name="title" id="title" placeholder="Enter the turnoment title" />
                    </div>
                    <div class="col-md-4 admin-group">
                        <input type="number" required class="form-control" name="price" id="price" placeholder="Enter the price" />
                    </div>
                    <div class="col-md-4 admin-group">
                        <input type="number" required class="form-control" name="balance" id="balance" placeholder="Enter Balance" />
                    </div>
                    <table id="tblCustomers" class="table" cellpadding="0" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Team 1</th>
                                <th>Start Date</th>
                                <th>Team 2</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="added-data"></tbody>
                        <tfoot>
                            <tr>
                                <td><input type="text" class="form-control autocomplate-data" id="txtName" name="txtName" /></td>
                                <td><input type="datetime-local" class="form-control" id="dtOf" name="dtOf" /></td>
                                <td><input type="text" class="form-control autocomplate-data" id="txtCountry" name="txtCountry" /></td>
                                <td><input type="button" id="btnAdd" class=" btn btn-primary btn-lg btn-block login-button add" value="Add" /></td>
                            </tr>
                        </tfoot>
                    </table>
                    <br />
                    <input type="button" id="btnSave" value="Save All" class=" btn save-btn" />
                    <input type="reset" id="reset" value="Reset" class=" btn reset-btn" />
                </div>
            </form>
        </div>
    </div>
</div>