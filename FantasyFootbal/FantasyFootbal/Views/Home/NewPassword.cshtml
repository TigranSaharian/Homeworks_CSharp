
@{
    ViewData["Title"] = "NewPassword";
}

<div class="container">
    <div class="row main">
        <div class="main-login main-center">
            <div class="sign-now">
                <h5>Restore password</h5>
            </div>
            <form asp-controller="Home" asp-action="NewPassword" method="post">
                <div class="form-grou">
                    <input type="text" required class="form-control" name="NewPassword" id="NewPassword" placeholder="Enter New Password" />
                </div>
                <div class="form-group">
                    <a href=""><input type="submit" id="button" value="Send" class="btn btn-primary btn-lg btn-block login-button" name="NewPassword"></a>
                </div>
            </form>
        </div>
    </div>
</div>